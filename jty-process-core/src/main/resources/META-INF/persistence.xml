<persistence xmlns="http://java.sun.com/xml/ns/persistence"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd"
	version="2.0">

	<persistence-unit name="persistence" transaction-type="RESOURCE_LOCAL">

		<provider>org.hibernate.ejb.HibernatePersistence</provider>
		<class>com.br.jty.process.entity.Activity </class>
		<class>com.br.jty.process.entity.Attachment </class>
		<class>com.br.jty.process.entity.CostCenter </class>
		<class>com.br.jty.process.entity.Department </class>
		<class>com.br.jty.process.entity.DependecyActivity </class>
		<class>com.br.jty.process.entity.Message </class>
		<class>com.br.jty.process.entity.Process </class>
		<class>com.br.jty.process.entity.Responsible </class>
		<class>com.br.jty.process.entity.SLA </class>
		<class>com.br.jty.process.entity.Step </class>
		<class>com.br.jty.process.entity.User </class>
		<class>com.br.jty.process.entity.Role</class>

       <properties>
			<property name="javax.persistence.jdbc.driver" value="org.postgresql.Driver"/>
			<property name="javax.persistence.jdbc.url" value="jdbc:postgresql://localhost:5432/testjty"/>
			<property name="javax.persistence.jdbc.user" value="equser"/>
			<property name="javax.persistence.jdbc.password" value="password"/>
			<property name="hibernate.dialect" value="org.hibernate.dialect.PostgreSQLDialect"/>
			<property name="hibernate.hbm2ddl.auto" value="create"/>
			<property name="hibernate.show_sql" value="false"/>
			<property name="hibernate.format_sql" value="false"/>		
	   </properties>

	</persistence-unit>

</persistence>